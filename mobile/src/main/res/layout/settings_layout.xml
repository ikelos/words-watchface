<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/background_settings_color"
			  android:orientation="vertical">

	<TextView
		style="@style/SettingsHeader"
		android:layout_marginTop="@dimen/margin_header_top"
		android:text="@string/language"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/lang_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/color_line_height"
		android:visibility="visible"/>

	<TextView
		style="@style/SettingsHeader"
		android:layout_marginTop="@dimen/margin_header_top"
		android:text="@string/background_color"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/background_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/color_line_height"
		android:visibility="visible"/>

	<TextView
		style="@style/SettingsHeader"
		android:layout_marginTop="@dimen/margin_header_top"
		android:text="@string/text_color"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/text_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/color_line_height"
		android:visibility="visible"/>

	<TextView
		style="@style/SettingsHeader"
		android:layout_marginTop="@dimen/margin_header_top"
		android:text="@string/accent_color"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/accent_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/color_line_height"
		android:visibility="visible"/>

	<TextView
		style="@style/SettingsHeader"
		android:layout_marginTop="@dimen/margin_header_top"
		android:text="@string/shadow_text_color"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/shadow_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/color_line_height"
		android:visibility="visible"/>

	<TextView
		style="@style/SettingsHeader"
		android:layout_marginTop="@dimen/margin_header_top"
		android:text="@string/shape"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/shape_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/color_line_height"
		android:visibility="visible"/>

	<TextView
		style="@style/SettingsHeader"
		android:layout_marginTop="36dp"
		android:text="@string/About"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="6dp"
		android:background="@drawable/settings_row"
		android:orientation="vertical">

		<FrameLayout
			android:id="@+id/author_row"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground"
			tools:ignore="UselessParent">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/settings_about_row_height"
				android:orientation="vertical">

				<TextView
					style="@style/SettingsTextView"
					android:layout_height="wrap_content"
					android:layout_marginBottom="2dp"
					android:text="@string/author"
					android:textColor="@color/text_color_light"/>

				<TextView
					style="@style/SettingsTextView"
					android:layout_marginTop="2dp"
					android:singleLine="true"
					android:text="@string/my_name"
					android:textColor="@color/text_color_light"
					android:textSize="13sp"
					android:visibility="visible"/>
			</LinearLayout>
		</FrameLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginStart="16dp"
			android:background="@color/layout_border_about"/>

		<FrameLayout
			android:id="@+id/version_row"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground"
			tools:ignore="UselessParent">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					style="@style/SettingsTextView"
					android:layout_height="wrap_content"
					android:layout_marginBottom="2dp"
					android:text="@string/version"
					android:textColor="@color/text_color_light"/>

				<TextView
					android:id="@+id/version"
					style="@style/SettingsTextView"
					android:layout_marginTop="2dp"
					android:textColor="@color/text_color_light"
					android:textSize="13sp"
					android:visibility="visible"/>
			</LinearLayout>
		</FrameLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginStart="16dp"
			android:background="@color/layout_border_about"/>

		<FrameLayout
			android:id="@+id/aim_row"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground"
			tools:ignore="UselessParent">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					style="@style/SettingsTextView"
					android:layout_height="wrap_content"
					android:layout_marginBottom="2dp"
					android:text="@string/aim"
					android:textColor="@color/text_color_light"/>

				<TextView
					style="@style/SettingsTextView"
					android:layout_marginTop="2dp"
					android:text="@string/aim_description"
					android:textColor="@color/text_color_light"
					android:textSize="13sp"
					android:visibility="visible"/>
			</LinearLayout>
		</FrameLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginStart="16dp"
			android:background="@color/layout_border_about"/>

		<FrameLayout
			android:id="@+id/code_row"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/settings_about_row_height"
				android:orientation="horizontal"
				tools:ignore="UselessParent">

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						style="@style/SettingsTextView"
						android:layout_height="wrap_content"
						android:layout_marginBottom="2dp"
						android:text="@string/source_codes"
						android:textColor="@color/text_color_light"/>

					<TextView
						style="@style/SettingsTextView"
						android:layout_marginTop="2dp"
						android:singleLine="true"
						android:text="@string/source_codes_description"
						android:textColor="@color/text_color_light"
						android:textSize="13sp"
						android:visibility="visible"/>
				</LinearLayout>

				<ImageView
					android:layout_width="28dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="16dp"
					android:src="@drawable/ic_open_in_browser_white_24dp"
					android:tint="@color/text_color_light"
					tools:ignore="ContentDescription"/>
			</LinearLayout>
		</FrameLayout>
	</LinearLayout>

</LinearLayout>